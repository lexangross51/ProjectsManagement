@model Projects.Presentation.Models.Projects.CreateProjectStep3Dto

<link rel="stylesheet" type="text/css" href="~/css/styles.css"/>

<div class="update-container">
    <form asp-action="CreateProjectStep3" asp-controller="Project" method="post">
        @Html.AntiForgeryToken()
        <div>
            <label class="update-label">Manager: </label>
            <input type="text" id="managerName" class="update-input"/>
            <input type="hidden" id="managerId" asp-for="ManagerId"/>

            <script type="text/javascript">
                $(document).ready(function () {
                    $('#managerName').autocomplete({
                        source: function (request, response){
                            $.ajax({
                                url: '/Employee/EmployeesJson/',
                                type: 'GET',
                                data: { term: request.term, role: "Manager" },
                                success: function (data){
                                    response($.map(data,  function (item) {
                                        return {label: item.value, value: item.id}
                                    }))
                                }
                            });
                        },
                        select: function (event, ui) {
                            $('#managerName').val(ui.item.label);
                            $('#managerId').val(ui.item.value);
                            return false;
                        }
                    }).on('mousedown', function () {
                        $(this).autocomplete("search", " ");
                    });
                });
            </script>
        </div>

        <div>
            <input type="submit" value="Next"/>
        </div>
    </form>
</div>